<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:background="@color/white"
    android:fitsSystemWindows="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:Android="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        >

        <ImageView
            android:id="@+id/fanhui10"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:src="@drawable/fanhui"/>
        <TextView
            android:id="@+id/title"
            android:layout_marginLeft="120dp"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:text="商品"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            />
        <ImageView
            android:id="@+id/court_xiangqing"
            android:layout_marginLeft="90dp"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:src="@drawable/court"
            />
    </LinearLayout>
    <ScrollView
        android:layout_weight="1"
        android:scrollbars="none"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.youth.banner.Banner
                android:id="@+id/banner_xiangqing"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                />
            <LinearLayout
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="评分："
                    android:textColor="@color/black"
                    android:layout_marginLeft="15dp"
                    />
                <TextView
                    android:id="@+id/score"
                    android:textColor="#FF0000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.9"
                    android:layout_marginLeft="3dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="月销："
                    android:textColor="@color/black"
                    android:layout_marginLeft="80dp"
                    />
                <TextView
                    android:id="@+id/month_count"
                    android:textColor="#FF0000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="28件"
                    android:layout_marginLeft="3dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总销量："
                    android:textColor="@color/black"
                    android:layout_marginLeft="50dp"
                    />
                <TextView
                    android:id="@+id/all_count"
                    android:textColor="#FF0000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="142件"
                    android:layout_marginLeft="3dp"
                    />
            </LinearLayout>
            <LinearLayout

                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:background="#CCCCCC"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>
                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/little_content"
                    android:layout_marginLeft="17dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="大包装 更实惠"
                    />
                <TextView
                    android:id="@+id/big_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="17dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="大包装 更实惠"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    />
                <LinearLayout

                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/x_price"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="17dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥ 43.8"
                        android:textColor="#FF0000"
                        android:textSize="20dp"
                        />
                    <TextView
                        android:id="@+id/shiping"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="260dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="不包邮"
                        android:textColor="@color/black"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/liner"
                    android:layout_marginTop="5dp"
                    android:background="#F4F4F4"
                    android:layout_marginLeft="15dp"
                    android:layout_width="380dp"
                    android:layout_height="30dp">
                    <TextView

                        android:id="@+id/x_type"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="新良原味面包粉5kg"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/liner1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">
                    <TextView
                        android:id="@+id/return_f"
                        android:textColor="#FF0000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="·七天无理由退换货"/>
                    <ImageView
                        android:layout_marginLeft="230dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/forward"/>
                </LinearLayout>
                <View
                    android:background="#CCCCCC"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <TextView
                    android:id="@+id/sss"
                    android:textSize="20dp"
                    android:layout_marginLeft="320dp"
                    android:textColor="#FF0000"
                    android:text="15个评价"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"/>
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:layout_marginTop="8dp"
                android:id="@+id/recyle"
                android:layout_width="match_parent"
                android:layout_height="400dp"
            />
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <Button
            android:id="@+id/add_court1"
            android:textColor="@color/white"
            android:background="@drawable/s_orange"
            android:text="加入购物车"
            android:layout_width="130dp"
            android:layout_height="60dp"/>
        <Button
            android:id="@+id/buy1"
            android:layout_marginLeft="1dp"
            android:textColor="@color/white"
            android:background="@drawable/s_orange"
            android:text="立即购买"
            android:layout_width="130dp"
            android:layout_height="60dp"/>
    </LinearLayout>

</LinearLayout>