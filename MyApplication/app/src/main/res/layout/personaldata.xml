<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
        <TextView
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:text="取消"

            android:textSize="22dp"
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/quit"
            />

        <TextView
            android:id="@+id/bianji"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="编辑个人资料"
            android:textSize="24dp"
            android:textStyle="bold"
            android:layout_weight="1">

        </TextView>

        <TextView
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:text="保存"
            android:textColor="@color/biz_audio_progress_bg"
            android:textSize="22dp"
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/save"
            >

        </TextView>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:layout_gravity="center"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher_round"
            android:id="@+id/personalphoto"
            />
        <Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_below="@+id/personalphoto"

            android:onClick="UpdatePhoto"
            android:text="上传头像"
            android:gravity="center"
            android:textSize="11sp">
        </Button>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/white"
        android:gravity="center">
        <ImageView
            android:layout_marginLeft="10dp"
            android:src="@drawable/yonghuu"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <TextView
            android:textColor="@color/black"
            android:id="@+id/T6"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="用户名"
            android:textSize="16sp" />

        <EditText
            android:textColor="@color/black"
            android:id="@+id/edt_name"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:gravity="center"
            android:textSize="16sp" />
    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/white"
        android:gravity="center">
        <ImageView
            android:layout_marginLeft="10dp"
            android:src="@drawable/sex"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <TextView
            android:textColor="@color/black"
            android:id="@+id/T1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="性别"

            android:textSize="16sp" />

        <EditText
            android:textColor="@color/black"
            android:id="@+id/edt_xing"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:gravity="center"
            android:textSize="16sp" />
    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/white"
        android:gravity="center">
        <ImageView
            android:layout_marginLeft="10dp"
            android:src="@drawable/birth"
            android:layout_width="25dp"
            android:layout_height="25dp" />
        <TextView
            android:textColor="@color/black"
            android:id="@+id/T2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="生日"
            android:textSize="16sp" />

        <EditText
            android:textColor="@color/black"
            android:id="@+id/edt_sheng"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:gravity="center"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/white"
        android:gravity="center">
        <ImageView
            android:layout_marginLeft="10dp"
            android:src="@drawable/prof"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <TextView
            android:textColor="@color/black"
            android:id="@+id/T3"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="职业"
            android:textSize="16sp" />

        <EditText
            android:textColor="@color/black"
            android:id="@+id/edt_ai"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:gravity="center"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/white"
        android:gravity="center">
        <ImageView
            android:layout_marginLeft="10dp"
            android:src="@drawable/juzhu"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <TextView
            android:textColor="@color/black"
            android:id="@+id/T5"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="家乡"
            android:textSize="16sp" />

        <EditText
            android:textColor="@color/black"
            android:id="@+id/edt_home"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:gravity="center"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@android:color/white"
        >
        <ImageView
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/per"
            android:layout_width="25dp"
            android:layout_height="25dp" />
        <TextView
            android:textColor="@color/black"
            android:id="@+id/T4"
            android:layout_width="150dp"
            android:paddingTop="6dp"
            android:layout_height="40dp"
            android:layout_marginLeft="50dp"
            android:text="个人简介"
            android:textSize="16sp" />

        <EditText
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:id="@+id/edt_qian"
            android:layout_width="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_height="80dp"
            android:layout_below="@id/T4"
            android:layout_marginLeft="50dp"

            android:textSize="16sp" />
    </RelativeLayout>

</LinearLayout>