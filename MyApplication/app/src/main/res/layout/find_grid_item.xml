<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    >

    <LinearLayout
        android:background="@drawable/find_glid"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="155dp"
            />
    <TextView
        android:id="@+id/textView"
        android:text="ab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="18dp"
        android:textColor="#000"
        />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="20dp">
            <ImageView
                android:id="@+id/yonghutouxiang"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/birth"
                />
            <TextView
                android:id="@+id/yonghunicheng"
                android:text="匿名用户"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_toRightOf="@+id/yonghutouxiang"
                />
            <TextView
                android:id="@+id/dianzanrenshu"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:layout_toLeftOf="@+id/dianzan"
                />
            <ImageView
                android:id="@+id/dianzan"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/dianzan2"
                android:layout_alignParentRight="true"

                />



        </RelativeLayout>


    </LinearLayout>




</LinearLayout>
