<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/s_img"
                android:layout_width="100dp"
                android:layout_height="100dp"/>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="100dp">
                <TextView
                    android:id="@+id/s_content"
                    android:singleLine="false"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:text="良润新良原面包粉50kg新良原面包粉50kg"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    />
                <TextView
                    android:id="@+id/s_price"
                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="￥27"
                    android:textColor="#FF0000"
                    />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_marginTop="10dp"
        android:background="#CCCCCC"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="130dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="种类"
            android:textSize="20dp"
            />
        <GridView
            android:layout_marginLeft="20dp"
            android:minHeight="40dp"

            android:listSelector="@drawable/selector"
            android:layout_marginTop="10dp"
            android:descendantFocusability="blocksDescendants"
            android:id="@+id/s_grid"
            android:numColumns="2"
            android:layout_width="350dp"
            android:layout_height="110dp"/>

    </LinearLayout>
    <View
        android:layout_marginTop="10dp"
        android:background="#CCCCCC"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="数量"
            android:textSize="20dp"
            android:textColor="@color/black"/>
        <Space
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/del"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/jianshao_1"/>
        <EditText
            android:background="@null"
           android:layout_marginTop="2dp"
            android:id="@+id/text"
            android:textAlignment="center"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:textColor="@color/black"
            android:text="1"
            android:textSize="20dp"/>
        <Button
            android:id="@+id/add"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/tianjia"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/roud"
        android:visibility="invisible"
        android:layout_marginLeft="80dp"
        android:src="@drawable/round"
        android:layout_width="15dp"
        android:layout_height="15dp"
        />
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <Button
            android:textColor="@color/white"
            android:background="@drawable/s_orange"
            android:id="@+id/add_court"
            android:text="加入购物车"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </Button>
        <Button
            android:layout_marginLeft="1dp"
            android:textColor="@color/white"
            android:background="@drawable/s_orange"
            android:id="@+id/buy_court"
            android:text="立即购买"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </Button>
    </LinearLayout>
</LinearLayout>