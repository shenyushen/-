<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#DC143C"
    android:orientation="vertical">
    <Button
        android:id="@+id/btn_back"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:background="#DC143C"
        android:drawableLeft="@drawable/fanhui1"
        android:paddingLeft="10dp"
        android:paddingTop="20dip"
        android:text="返回"
        android:textColor="@color/white"
        android:textSize="14dp" />


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="购物车"
        android:layout_marginTop="15dp"
        android:textColor="@color/white"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/bt_header_right"
        android:layout_width="50dip"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:gravity="center"
        android:text="编辑"
        android:paddingTop="20dip"
        android:textColor="@color/white"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/bt_header_right2"
        android:layout_width="50dip"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:gravity="center"
        android:text="完成"
        android:visibility="gone"
        android:paddingTop="20dip"
        android:textColor="@color/white"
        android:textSize="14sp" />


</RelativeLayout>

    <ListView
        android:id="@+id/market_shopping_listview"
        android:layout_width="match_parent"
        android:layout_height="632dp"
        android:layout_marginTop="50dp"></ListView>


    <LinearLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white">
        <CheckBox
            android:checked="true"
            android:id="@+id/ck_all"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:checkMark="?android:attr/listChoiceIndicatorMultiple"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:scaleX="0.6"
            android:scaleY="0.6"
            android:text="全选"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/tv_show_price"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="5dp"
            android:text="合计:0.00"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/tv_settlement"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="#bd02"
            android:gravity="center"
            android:text="结算"

            android:textColor="@color/white" />
        <TextView
            android:id="@+id/tv_del"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="#bd02"
            android:gravity="center"
            android:visibility="gone"
            android:text="删除"
            android:textColor="@color/white" />
    </LinearLayout>
</RelativeLayout>